        window.addEvent('domready',function() {
            $$('a.collapseNav').addEvent('click',  function(e) {
                e.preventDefault();
                if($('nav').getStyle('display') == 'none') {
                    $('nav').setStyle('display','block');                 
                } else $('nav').setStyle('display','none');
                
            });
            window.addEvent('resize', function(){
